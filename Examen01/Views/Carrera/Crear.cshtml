@model Carrera
<form method="post">
	<div class="row pb-2">
		<h2 class="text-primary"> Crear Carrera</h2>
		<hr/>
	</div>
	<div asp-validation-summary="All"></div>
	<div class="mb-3 row p-1">
		<label asp-for="Nombre" class="p-0"></label>
		<input asp-for="Nombre" class="form-control"/>
	</div>

	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-danger form-control">Guardar
			</button>
		</div>

		<div class="col-6 col-md-3">
			<a asp-controller="Carrera" asp-action="Index" class="btn btn-secondary form-control">
				Cancelar
			</a>
		</div>

	</div>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptPart"/>
	}
}