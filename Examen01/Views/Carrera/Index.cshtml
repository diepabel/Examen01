@model IEnumerable<Carrera>

@{
    ViewData["Title"] = "Carreras";
}

<h1>Lista de Carreras</h1>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nueva Carrera</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carrera in Model)
        {
            <tr>
                <td>@carrera.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@carrera.CarreraId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@carrera.CarreraId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>